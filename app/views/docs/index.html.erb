<p id="notice"><%= notice %></p>

<h1>Listing Docs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Time</th>
      <th>Content</th>
      <th>City</th>
      <th>Address</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @docs.each do |doc| %>
      <tr>
        <td><%= link_to doc.title, doc %></td>
        <td><%= time_ago_in_words(doc.created_at) %></td>
        <td><%= truncate(doc.content, length:50) %></td>
        <td><%= doc.city %></td>
        <td><%= doc.address %></td>
        <td><%= doc.latitude %></td>
        <td><%= doc.latitude %></td>
        <!-- <td><%= link_to 'Show', doc %></td> -->
        <!-- <td><%= link_to 'Edit', edit_doc_path(doc) %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

